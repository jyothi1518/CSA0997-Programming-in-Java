import java.util.*;
class reducetozero{
    public static void main(String[] args){
        Scanner sc=new Scanner(System.in);
        System.out.print("Enter a number:");
        int n=sc.nextInt();
        int s=0;
        while(n>0){
            if(n%2==0){
                n=n/2;
            }
            else{
                n-=1;
            }
            s++;
        }
        System.out.println("Number of steps="+s);
    }
}
